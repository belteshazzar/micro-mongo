{
  "name": "micro-mongo",
  "version": "1.1.3",
  "description": "mongo api interface to localStorage and plain js objects",
  "main": "main.js",
  "scripts": {
    "test": "mocha --reporter spec test/test.js",
    "cover": "istanbul cover node_modules/mocha/bin/_mocha -- -R spec test/*",
    "build": "npm run build:clean && npm run build:dev && npm run build:min",
    "build:clean": "rm -rf build",
    "build:dev": "vite build",
    "build:min": "vite build --config vite.config.min.js --mode production",
    "dev": "vite",
    "preview": "vite preview"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/belteshazzar/micro-mongo.git"
  },
  "keywords": [
    "mongo",
    "db",
    "mongodb",
    "localstorage",
    "database",
    "query",
    "local",
    "storage"
  ],
  "author": "Daniel Walton <daniel@belteshazzar.com> (http://www.belteshazzar.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/belteshazzar/micro-mongo/issues"
  },
  "homepage": "https://github.com/belteshazzar/micro-mongo#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-json": "^5.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "chai": "^4.3.7",
    "copyfiles": "^2.4.1",
    "mocha": "^10.1.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "de9im": "1.3.1",
    "stemmer": "^2.0.1"
  }
}
